@model IEnumerable<User>

<h2>Quản lý người dùng</h2>
<table class="table text-muted">
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Allowed Areas</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>@string.Join(", ", user.AllowedAreas)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
