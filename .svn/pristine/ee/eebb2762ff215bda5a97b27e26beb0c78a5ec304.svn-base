#data-results {
    max-height: max-content; /* Chiều cao tối đa */
    overflow: auto; /* Cuộn cả ngang và dọc */
    border: 1px solid #ddd;
    margin-top: 10px;
    padding: 0;
    background-color: #fff;
    position: relative;
}

table {
    width: 100%;
    border-collapse: collapse;
    font-size: 12px; /* Cỡ chữ nhỏ hơn */
    table-layout: auto; /*Đảm bảo các cột tự động thay đổi kích thước */
}

.table-wrapper {
    /*overflow-x: auto;*/
}

th, td {
    padding: 5px;
    text-align: left;
    border: 1px solid #ddd;
    
}


th {
    background-color: #e3f2fd; /* Màu nền xanh dương nhạt */
    position: sticky;
    top: 0;
    z-index: 2;
}

    td:first-child, th:first-child {
        position: sticky;
        left: 0;
        z-index: 1;
        background-color: #e3f2fd; /* Màu nền giống hàng tiêu đề */
    }

tr:nth-child(even) {
    background-color: #f9f9f9;
}

tr:hover {
    background-color: #f1f1f1;
}

/* Thay đổi màu dựa trên giá trị Status */
td.status-close {
    background-color: #d4edda; /* Màu xanh lá nhạt */
    color: #155724; /* Chữ màu xanh đậm */
    font-weight: bold;
}

td.status-fail {
    background-color: #f8d7da; /* Màu đỏ nhạt */
    color: #721c24; /* Chữ màu đỏ đậm */
    font-weight: bold;
}

td.status-on-going {
    background-color: #fff3cd; /* Màu vàng nhạt */
    color: #856404; /* Chữ màu vàng đậm */
    font-weight: bold;
}

/* CSS cho cột Remark */
td.remark-cell {
    white-space: pre-wrap !important;
    word-wrap: break-word !important;
    overflow-wrap: break-word !important;
    max-width: 25% !important;
    width: 25%;
    inline-size: auto !important;

}


#remark-dialog textarea {
    font-size: 14px;
    line-height: 1.5;
}

#remark-dialog button {
    cursor: pointer;
    border-radius: 3px;
}

    #remark-dialog button:hover {
        opacity: 0.9;
    }


#modal-dialog {
    max-width: 90%;
    max-height: 90%;
    overflow: hidden;
}

    #modal-dialog > div:nth-child(2) {
        overflow: auto;
        max-height: 400px; /* Adjust the height as needed */
        border: 1px solid #ddd;
    }

thead {
    background: #e9ecef;
    position: sticky;
    top: 0;
    z-index: 1;
}
