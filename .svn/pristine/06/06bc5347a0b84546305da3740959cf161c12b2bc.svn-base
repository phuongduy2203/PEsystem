@{
    ViewData["Title"] = "DataCloud";
}
@{
    Layout = "~/Areas/DataCloud/Views/Shared/Layout_dataCloud.cshtml";
}

<main id="mainContent">
    <section class="section dashboard">
        <div id="ctr-box" class="">
            <!-- Dropdown and Actions -->
            <div class="">
                <!-- Textarea -->
                <input type="text"
                       id="data-input"
                       class="form-control"
                       placeholder="Mô tả file">
            </div>
            <!-- Search Button -->
            <button id="data-search-btn" class="btn btn-primary">
                <i class="fas fa-search"></i> Tìm kiếm
            </button>

            <!-- Add Folder Button -->
            <button id="add-folder-btn" class="btn btn-secondary">
                <i class="fas fa-folder-plus"></i> Tạo folder
            </button>

            <!-- Upload File Button -->
            <button id="upload-btn" class="btn btn-success">
                <i class="fas fa-upload"></i> Tải lên
            </button>
            <!-- Hidden Input for File -->
            <input id="file-input" type="file" style="display: none;" />

            <!-- Download File Button -->
            <button id="download-btn" class="btn btn-warning">
                <i class="fas fa-download"></i> Tải xuống
            </button>

            <!-- Delete File Button -->
            <button id="delete-btn" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Xóa
            </button>

            
        </div>
        <!-- data-link -->
        <p id="data-link" style="color:black; font-size: 16px;">Đường dẫn hiện tại:</p>
        <!-- Back Button -->
        <button id="back-btn" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </button>

        <div id="result-box">
            <!--hiển thị kho dữ liệu-->
            <div id="data-cloud-results"></div>
        </div>

    </section>


</main>

@section Scripts {
    <script src="~/assets/areas/datacloud/js/datacloud.js"></script>
}