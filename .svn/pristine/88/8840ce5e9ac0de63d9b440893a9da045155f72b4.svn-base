#data-results {
    max-height: max-content; /* Chiều cao tối đa */
    overflow: auto; /* Cuộn cả ngang và dọc */
    border: 1px solid #ddd;
    margin-top: 10px;
    padding: 0;
    background-color: #fff;
    position: relative;
}

/* Thay đổi màu dựa trên giá trị Status */
td.status-close {
    background-color: #d4edda; /* Màu xanh lá nhạt */
    color: #155724; /* Chữ màu xanh đậm */
    font-weight: bold;
}

td.status-fail {
    background-color: #f8d7da; /* Màu đỏ nhạt */
    color: #721c24; /* Chữ màu đỏ đậm */
    font-weight: bold;
}

td.status-on-going {
    background-color: #fff3cd; /* Màu vàng nhạt */
    color: #856404; /* Chữ màu vàng đậm */
    font-weight: bold;
}

/* CSS cho cột Remark */
td.remark-cell {
    word-wrap: break-word !important;
    overflow-wrap: break-word !important;
    inline-size: auto !important;
}


#remark-dialog textarea {
    font-size: 14px;
    line-height: 1.5;
}

#remark-dialog button {
    cursor: pointer;
    border-radius: 3px;
}

    #remark-dialog button:hover {
        opacity: 0.9;
    }


#modal-dialog {
    max-width: 90%;
    max-height: 90%;
    overflow: hidden;
}

    #modal-dialog > div:nth-child(2) {
        overflow: auto;
        max-height: 400px; /* Adjust the height as needed */
        border: 1px solid #ddd;
    }


.datatable-table thead th {
    position: sticky;
    top: 0;
    background-color: #343a40;
    z-index: 10;
}

.datatable-table th:nth-child(1),
.datatable-table td:nth-child(1){
    position: sticky;
    left: 0;
    background-color: #343a40;
}

.datatable-table td:nth-child(1){
    background-color: #fff;
}

.datatable-table th:nth-child(1),
.datatable-table td:nth-child(1){
    border-right: 2px solid #dee2e6;
}

.datatable-table th:nth-child(1),
.datatable-table td:nth-child(1) {
    left: 0;
    min-width: 50px;
}

.datatable-table thead th:nth-child(1){
    z-index: 15;
}


/* Thêm hiệu ứng hover cho hàng */
.datatable-table tbody tr:hover td,
.datatable-table tbody tr:hover th {
    background-color: #76b900 !important;
    /*transition: background-color 0.2s ease;*/
}

/* (Tùy chọn) Giữ màu đặc biệt cho hàng auto-block khi hover */
.datatable-table tbody tr.auto-block:hover td,
.datatable-table tbody tr.auto-block:hover th {
    background-color: #76b900 !important;
    /*transition: background-color 0.2s ease;*/
}