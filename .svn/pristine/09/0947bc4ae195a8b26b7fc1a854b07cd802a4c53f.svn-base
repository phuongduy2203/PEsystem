@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    ViewData["Title"] = "Login";
}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card no-transition p-4 shadow" style="width: 100%; max-width: 400px; border-radius: 12px; background-color: rgba(255, 255, 255, 0.92);">
        <div class="text-center mb-3">
            <img src="~/assets/img/logo.jpg" alt="Logo" style="width: 70px;">
        </div>
        <h3 class="text-center mb-2">Welcome to PE System! 👋</h3>
        <p class="text-muted text-center mb-4">Please sign-in to your account and start the adventure</p>
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="Username" placeholder="Username" required />
            </div>
            <div class="form-group mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                    <input type="password" class="form-control" id="password" name="Password" placeholder="Password" required />
                    <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('password', 'passwordToggleIcon')" tabindex="-1">
                        <i class="fas fa-eye" id="passwordToggleIcon"></i>
                    </button>
                </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe">
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-100" style="background-color: #76B900; border: none;">Log In</button>
        </form>
        <p class="text-center mt-3">
            <small>New on our platform? <a href="@Url.Action("Register", "Account")" class="text-decoration-none">Create an account</a></small>
        </p>
        <div class="d-flex justify-content-center align-items-center mt-4">
            <hr class="w-25"> <span class="px-2 text-muted">or</span> <hr class="w-25">
        </div>
        <div class="d-flex justify-content-center align-items-center mt-3">
            <a href="#" class="btn btn-light btn-sm mx-1">
                <img src="~/assets/img/honhai.png" style="width:13.35px; height:14.67px;" />
            </a>
            <a href="#" class="btn btn-light btn-sm mx-1"><i class="fab fa-github"></i></a>
            <a href="#" class="btn btn-light btn-sm mx-1"><i class="fab fa-google"></i></a>
        </div>
    </div>
</div>
