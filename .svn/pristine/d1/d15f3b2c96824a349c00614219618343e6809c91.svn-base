#ctr-box {
    display: flex;
    align-items: center;
    gap: 10px; /* Khoảng cách giữa các phần tử */
}

#data-input {
    width: 300px; /* Đặt chiều rộng cho input */
    height: 40px; /* Đặt chiều cao để khớp với nút */
    padding: 8px 10px; /* Khoảng đệm trong input */
    border: 1px solid #ccc;
    border-radius: 4px; /* Bo góc */
    box-shadow: none; /* Loại bỏ bóng */
}

#data-search-btn {
    height: 40px; /* Chiều cao khớp với input */
    padding: 0 15px; /* Khoảng đệm trong nút */
    border: none; /* Loại bỏ viền */
    border-radius: 4px; /* Bo góc */
    background-color: #007bff; /* Màu nền */
    color: #fff; /* Màu chữ */
    cursor: pointer;
}

#data-search-btn:hover {
    background-color: #0056b3; /* Màu nền khi hover */
}

.data-item {
    font-size: 20px;
    color: black;
    margin: 5px 0;
    cursor: pointer;
    display: flex;
    align-items: center;
}

    .data-item i {
        margin-right: 8px;
        color: #f4c542; /* Màu vàng cho folder */
    }

    .data-item:hover {
        text-decoration: underline;
        color: darkblue;
    }

#data-cloud-results {
    overflow: auto; /* Kích hoạt thanh cuộn */
    max-height: 450px; /*Đặt chiều cao tối đa của container */
}

