@{
    ViewData["Title"] = "DataCloud";
}
@{
    Layout = "~/Areas/DataCloud/Views/Shared/Layout_dataCloud.cshtml";
}

<main id="mainContent">
    <div class="container-fluid">
        <!-- Thanh điều hướng trên cùng -->
        <div id="drive-header" class="d-flex justify-content-between align-items-center p-2 mb-3">
            <div>
                <button id="new-folder-btn" class="btn btn-primary me-2">New Folder</button>
                <button id="upload-file-btn" class="btn btn-outline-primary me-2">Upload File</button>
                <button id="upload-folder-btn" class="btn btn-outline-primary">Upload Folder</button>
            </div>
            <div>
                <button id="download-btn" class="btn btn-outline-secondary me-2">Download</button>
                <button id="delete-btn" class="btn btn-outline-danger">Delete</button>
            </div>
        </div>

        <!-- Breadcrumb -->
        <div id="breadcrumb" class="p-2 mb-2"></div>

        <!-- Khu vực hiển thị tệp/thư mục -->
        <div id="data-cloud-results" class="p-2"></div>

        <!-- Input ẩn để chọn tệp/thư mục -->
        <input type="file" id="file-input" style="display:none;" multiple>
        <input type="file" id="folder-input" style="display:none;" webkitdirectory directory multiple>
    </div>

</main>

@section Scripts {
    <script src="~/assets/areas/datacloud/js/datacloud.js?v=@DateTime.Now.Ticks"></script>
}