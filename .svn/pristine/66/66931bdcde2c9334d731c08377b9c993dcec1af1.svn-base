@{
    ViewData["Title"] = "SmartFA Area";
}
@{
    Layout = "~/Areas/SmartFA/Views/Shared/_Layout_SmartFA.cshtml";
}
<section class="dashboard section">
    <div class="row d-flex flex-wrap">
        <!-- Biểu đồ Số lượng vào/ra -->
        <div class="col-md-6">
            <div class="card shadow-lg rounded-lg border-0">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title text-center font-weight-bold">TRẠNG THÁI</h5>
                    </div>
                    <div id="statusChart" style="width: 100%; height: 400px;"></div>
                </div>
            </div>
        </div>

        <!-- Biểu đồ TOP MODEL -->
        <div class="col-md-6">
            <div class="card shadow-lg rounded-lg border-0">
                <div class="card-body p-4">
                    <h5 class="d-flex justify-content-between align-items-center">TOP MODEL</h5>
                    <div id="container" style="width: 100%; height: 400px;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row d-flex flex-wrap mt-4">
        <!-- Form chọn ngày -->
        <div class="row mb-3">
            <i class="fa fa-calendar fa-2x" id="pickDateBtn" aria-hidden="true" style="cursor:pointer;"></i>
            <input type="datetime-local" id="cioStartDate" hidden />
            <input type="datetime-local" id="cioEndDate" hidden />
        </div>
        <!-- Chart Check In/Out & Tồn kho -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg rounded-lg border-0 h-100">
                <div class="card-body p-4">
                    <h5 class="card-title font-weight-bold mb-3">CHECK IN/OUT &amp; TỒN KHO (BEFORE KANBAN)</h5>
                    <div id="checkInOutChart" style="width: 100%; height: 400px;"></div>
                </div>
            </div>
        </div>
        <!-- Chart Check In Before/After -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg rounded-lg border-0 h-100">
                <div class="card-body p-4">
                    <h5 class="card-title font-weight-bold mb-3">CHECK IN BEFORE/AFTER KANBAN</h5>
                    <div id="checkInBeforeAfer" style="width: 100%; height: 400px;"></div>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-4">
        <div class="col-lg-8 mb-4">
            <div class="card shadow-lg rounded-lg border-0 h-100">
                <div class="card-body p-4">
                    <h5 class="card-title font-weight-bold mb-3">TỒN KHO CHƯA CÓ VỊ TRÍ - 3 NGÀY GẦN NHẤT</h5>
                    <div id="noLocationTrendChart" style="width: 100%; height: 400px;"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card shadow-lg rounded-lg border-0 h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title font-weight-bold mb-0">BÁO CÁO NGÀY HÔM TRƯỚC</h5>
                        <small class="text-muted" id="previousDayReportRange"></small>
                    </div>
                    <div class="table-responsive">
                        <table id="previousDayReportTable" class="table table-bordered table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>Danh mục</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Check In (Before + After)</td>
                                    <td class="text-center" id="previousDayCheckInCount">0</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>Đã có vị trí</td>
                                    <td class="text-center" id="previousDayHasLocationCount">0</td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>Chưa có vị trí</td>
                                    <td class="text-center" id="previousDayNoLocationCount">0</td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-sm btn-outline-primary" id="previousDayNoLocationBtn" disabled>Xem SN</button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--Table SN ton kho chua co vi tri-->
    <div id="cioNoLocationSection" class="row mt-4" style="display:none;">
        <div class="col-12">
            <div class="card shadow-lg rounded-lg border-0">
                <div class="card-body p-4">
                    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                        <h5 class="card-title font-weight-bold mb-0">Tồn kho chưa có vị trí</h5>
                        <img src="~/assets/img/excel.png" alt="Excel Icon" id="exportNoLocationExcelBtn" style="width:32px; height:32px;">
                    </div>
                    <div class="table-responsive">
                        <table id="cio-no-location-table" class="table table-bordered datatable-table table-striped mb-0">
                            <thead>
                                <tr>
                                    <th>TYPE</th>
                                    <th>SERIAL_NUMBER</th>
                                    <th>MODEL_NAME</th>
                                    <th>PRODUCT_LINE</th>
                                    <th>LOCATION</th>
                                    <th>AGING_HOURS</th>
                                    <th>WIP_GROUP</th>
                                    <th>ERROR_FLAG</th>
                                    <th>WORK_FLAG</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal chứa DataTable -->
    <div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-lg-custom">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="statusModalLabel">Danh Sách Serial Numbers</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body table-responsive">
                    <table id="modal-sn-table" class="table table-bordered datatable-table table-striped">
                        <thead>
                            <tr>
                                <th>SERIAL_NUMBER</th>
                                <th>PRODUCT_LINE</th>
                                <th>MODEL_NAME</th>
                                <th>WIP_GROUP</th>
                                <th>TEST_GROUP</th>
                                <th>ERROR_CODE</th>
                                <th>ERROR_DESC</th>
                                <th>STATUS_FA</th>
                                <th>PERSON_CONFIRM</th>
                                <th>TIME_CONFIRM</th>
                                <th>HANDLER</th>
                                <th>LOCATION</th>
                                <th>BORROW_STATUS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Dữ liệu sẽ được chèn tại đây -->
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                        <img src="~/assets/img/excel.png" alt="Excel Icon" id="exportExcelBtn" style="width:32px; height:32px;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal hiển thị chi tiết Check In/Out -->
    <div class="modal fade" id="cioModal" tabindex="-1" aria-labelledby="cioModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-lg-custom">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cioModalLabel">Chi tiết</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body table-responsive">
                    <table id="cio-modal-table" class="table table-bordered datatable-table table-striped">
                        <thead>
                            <tr>
                                <th>SFG</th>
                                <th>FG</th>
                                <th>MO_NUMBER</th>
                                <th>MODEL_NAME</th>
                                <th>PRODUCT_LINE</th>
                                <th>WORK_FLAG</th>
                                <th>ERROR_FLAG</th>
                                <th>LOCATION</th>
                                <th>AGING_HOURS</th>
                                <th>P_SENDER</th>
                                <th>IN_DATE</th>
                                <th>OUT_DATE</th>
                                <th>REPAIRER</th>
                                <th>STATION</th>
                                <th>ERROR_CODE</th>
                                <th>ERROR_DESC</th>
                                <th>TYPE</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <img src="~/assets/img/excel.png" alt="Excel Icon" id="exportCioExcelBtn" style="width:32px; height:32px;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
     .modal-lg-custom {
        max-width: 90% !important;
    }
</style>
@section Scripts {
    <script src="~/lib/datatable/jquery.datatables.min.js"></script>
    <script src="~/assets/vendor/chart.js/highcharts.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
    <script src="~/assets/areas/smartfa/js/dashboardfa.js?v=@DateTime.Now.Ticks"></script>
}