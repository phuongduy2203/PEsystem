@{
    ViewData["Title"] = "PDRepository";
}
@{
    Layout = "~/Areas/PDRepositories/Views/Shared/_Layout_PD.cshtml";
}
 
<main id="mainContent">
    <section class="section dashboard">

        <div class="PdStock-search-container d-flex gap-3">
            <!-- Dropdown and Actions -->
            <div class="d-flex flex-column align-items-start gap-0.5">
                <select id="search-options" class="form-select">
                    <option selected>TÌM KIẾM</option>
                    <option value="SEARCH_All">Tìm kiếm Tất Cả</option>
                    <option value="SEARCH_S/N">Tìm kiếm theo SN</option>
                    <option value="SEARCH_CAR">Tìm kiếm theo mã thùng</option>
                    <option value="SEARCH_MODEL_NAME">Tìm kiếm theo tên hàng</option>
                    <option value="SEARCH_EXPORT">Tìm kiếm lịch sử</option>
                </select>
                <!-- Search Button -->
                <button id="PdStock-search-btn" class="btn btn-primary mt-2">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>
                <!-- Export Button -->
                <button id="PdStock-ExportExcel-btn" class="btn btn-secondary mt-2">
                    <i class="fas fa-file-export"></i> Xuất Excel
                </button>
                <!-- Data Quantity -->
                <p id="Data-search-qty" style="color:black; font-size: 16px;">Tổng số kết quả: 0</p>
            </div>

            <!-- Textarea -->
            <textarea name="PD-repo-seach"
                      id="PD-repo-seach-input"
                      class="form-control"
                      rows="2"
                      placeholder=" List"></textarea>
        </div>


        <div>
            <!--HIEN THI BANG TIM KIEM-->
            <div id="PDStock-search-results-section"></div>
        </div>

    </section>
</main>

@section Scripts {
    <script src="~/js/PdStock/pdrepository.js"></script>
    <script src="~/js/PdStock/xlsx.full.min.js"></script>
}