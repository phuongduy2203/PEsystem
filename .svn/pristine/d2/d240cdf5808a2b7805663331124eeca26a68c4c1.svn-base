@model RegisterModel
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    ViewData["Title"] = "Register";
}

<!-- Hiệu ứng particles -->
<div id="particles-js"></div>

<!-- Form đăng ký -->
<div class="login-container" style="position: relative; z-index: 1000;">
    <div class="text-center mb-3">
        <img src="~/assets/img/logo.jpg" alt="Logo" style="width: 70px;">
    </div>
    <h3>Adventure starts here 🚀</h3>
    <p>Make your app management easy and fun!</p>
    <form method="post" asp-controller="Account" asp-action="Register">
        <div class="form-group mb-2">
            <input type="text" id="username" name="Username" placeholder="Username" required />
        </div>
        <div class="form-group mb-2">
            <input type="text" id="fullName" name="FullName" placeholder="FullName" required />
        </div>
        <div class="form-group mb-2">
            <input type="text" id="email" name="Email" placeholder="Email" required />
        </div>
        <div class="form-group mb-2">
            <select id="department" name="Department" required>
                <option value="PE">PE</option>
                <option value="RE">RE</option>
                <option value="PQE">PQE</option>
                <option value="ME-SMT">ME-SMT</option>
                <option value="ME-SI">ME-SI</option>
                <option value="SQE">SQE</option>
                <option value="PD-SI">PD-SI</option>
                <option value="PD-SMT">PD-SMT</option>
                <option value="PD-PTH">PD-PTH</option>
                <option value="IPQC">IPQC</option>
                <option value="TE">TE</option>
                <option value="PM">PM</option>
            </select>
        </div>
        <div class="form-group mb-2">
            <div class="input-group">
                <input type="password" id="password" name="Password" placeholder="Password" required />
            </div>
        </div>
        <div class="form-group mb-2">
            <div class="input-group">
                <input type="password" id="confirmPassword" name="ConfirmPassword" placeholder="Confirm Password" required />
            </div>
        </div>
        <button type="submit" class="mt-1">Sign Up</button>
    </form>
    <p class="text-muted text-center mt-1">
        Already have an account? <a href="@Url.Action("Login", "Account")">Sign in instead</a>
    </p>
    <div class="d-flex justify-content-center align-items-center mt-4">
        <hr class="w-25"> <span class="px-2 text-muted">or</span> <hr class="w-25">
    </div>
    <div class="d-flex justify-content-center align-items-center mt-3">
        <a href="#" class="btn btn-light btn-sm mx-1">
            <img src="~/assets/img/honhai.png" style="width:13.35px; height:14.67px;" />
        </a>
        <a href="#" class="btn btn-light btn-sm mx-1"><i class="fab fa-github"></i></a>
        <a href="#" class="btn btn-light btn-sm mx-1"><i class="fab fa-google"></i></a>
    </div>
</div>

<script>
    // Kiểm tra thông tin nhập liệu
    document.querySelector("form").addEventListener("submit", function (event) {
        let inputs = document.querySelectorAll("input, select");
        for (let input of inputs) {
            if (!input.value.trim()) {
                alert("Vui lòng nhập đầy đủ thông tin!");
                event.preventDefault();
                return;
            }
        }
    });
</script>

@* Tùy chỉnh CSS và JavaScript trong section hoặc file riêng *@
<style>
    input[type="text"],
    input[type="password"],
    select {
        display: block;
        width: 100%;
        padding: 12px;
        margin: 10px 0;
        background: rgba(255, 255, 255, 0.8);
        border: 1px solid rgba(118, 185, 0, 0.4);
        color: #333;
        outline: none;
        border-radius: 5px;
        transition: 0.3s;
    }

    input[type="text"]:focus,
    input[type="password"]:focus,
    select:focus {
        border-color: #76b900;
        box-shadow: 0 0 10px rgba(118, 185, 0, 0.7);
        background: #fff;
    }

    .input-group button {
        background: rgba(255, 255, 255, 0.8);
        border: none;
        color: #76b900;
    }

    button[type="submit"] {
        background: #76b900;
        color: white;
        border: none;
        padding: 12px;
        width: 100%;
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
        font-size: 16px;
    }

    button[type="submit"]:hover {
        background: #5d9400;
        box-shadow: 0 0 15px rgba(118, 185, 0, 0.7);
    }

    .text-muted a {
        color: #76b900;
        text-decoration: none;
    }

    .text-muted a:hover {
        color: #5d9400;
    }
</style>

<script>

    // Hàm toggle password
    function togglePassword(inputId, iconId) {
        const input = document.getElementById(inputId);
        const icon = document.getElementById(iconId);
        if (input.type === "password") {
            input.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            input.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    }
</script>