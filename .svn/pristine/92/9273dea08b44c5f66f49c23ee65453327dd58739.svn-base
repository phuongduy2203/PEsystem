@{
    ViewData["Title"] = "PDRepository";
}
@{
    Layout = "~/Areas/PDRepositories/Views/Shared/_Layout_PD.cshtml";
}
<main id="mainContent">
    <section class="section dashboard">

        <div class="PdStock-search-container d-flex gap-3">
            <!-- Dropdown and Actions -->
            <div class="d-flex flex-column align-items-start gap-0.5">
                <select id="search-options" class="form-select">
                    <option selected>Chọn chức năng</option>
                    <option value="exportByCartonNo">Xuất với list CARTON</option>
                    <option value="exportBySn">Xuất với list SN</option>
                </select>
                <!-- Search Button -->
                <button id="PdStock-exprort-btn" class="btn btn-primary mt-2">
                    <i class="fas fa-search"></i> Xuất kho
                </button>
                <!-- Data Quantity -->
                <p id="Data-search-qty" style="color:black; font-size: 16px;">Tổng số kết quả: 0</p>
            </div>

            <!-- Textarea -->
            <textarea name="PD-repo-seach"
                      id="PD-repo-exprot-input"
                      class="form-control"
                      rows="2"
                      placeholder=" List DATA"></textarea>
        </div>


        <div>
            <!--HIEN THI BANG TIM KIEM-->
            <div id="PDStock-search-results-section"></div>
        </div>

    </section>
</main>

@section Scripts {
    <script src="~/assets/areas/pdstock/js/pdstockexport.js"></script>
}
