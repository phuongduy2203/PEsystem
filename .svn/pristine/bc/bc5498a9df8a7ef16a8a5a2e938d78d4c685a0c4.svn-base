@using PESystem.Helpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hass Bi</title>
    <link rel="icon" href="~/assets/img/logo-hass-bi.png" type="image/png">
    <link href="~/css/site.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/all-fa-icon/css/all.min.css" rel="stylesheet" />
    <link href="~/lib/datatable/jquery.datatables.min.css" rel="stylesheet" />
    <link href="~/assets/areas/hassbi/css/hassbi.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
    <script src="~/lib/gsap-particles/particles.min.js"></script>
    <script src="~/lib/gsap-particles/gsap.min.js"></script>
    <link href="~/lib/datatable/fixedcolumns.datatables.min.css" rel="stylesheet" />



</head>
<body>
    <script>
        (function () {
            const isSidebarFixed = localStorage.getItem('isSidebarFixed') === 'true';
            if (isSidebarFixed) {
                document.documentElement.classList.add('sidebar-expanded');
            } else {
                document.documentElement.classList.remove('sidebar-expanded');
            }
        })();
    </script>
    <div class="layout">
        <header class="header d-flex justify-content-between align-items-center" id="header">
        </header>
        <!-- Sidebar dọc -->
        <div id="sidebar" class="sidebar">
            <!-- Logo and Dashboard with fixed checkbox -->
            <div class="dashboard-container">
                <a href="@Url.Action("Home", "Home", new { area = "" })">
                    <img src="~/assets/img/logo-hass-bi.png" style="width:48px; height:48px;" class="logo" />
                </a>
                <span class="spanTitle" style="font-size: 1.3rem; font-weight: bold;">
                    HASS-BI
                </span>
                <span><input type="checkbox" id="toggleSidebarFixed" title="" /></span>
            </div>
            <nav class="nav flex-column">
                <!-- Menu Items -->
                <a href="@Url.Action("Home", "Home", new { area = "" })" class="nav-link"><i class="fas fa-home"></i> <span>Trang chủ</span></a>
                <a href="@Url.Action("Index", "Home", new { area = "HassBi" })" class="nav-link @ViewContext.IsActive("Home", "Index")"><i class="fas fa-tasks"></i> <span>Báo cáo</span></a>
                <a href="@Url.Action("Index", "Detail", new { area = "HassBi" })" class="nav-link @ViewContext.IsActive("Detail", "Index")"><i class="fas fa-chart-bar"></i> <span>Dữ liệu</span></a>

            </nav>
        </div>

        <main id="mainContent">
            <div id="spinner-overlay">
                <span class="loader"></span>
            </div>
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/datatable/jquery.datatables.min.js"></script>
    <script src="~/lib/datatable/simple-datatables.js"></script>
    <script src="~/lib/datatable/datatables.fixedcolumns.min.js"></script>
    <script src="~/lib/sweetalert2/dist/sweetalert2.all.js"></script>
    <script src="~/lib/select2/dist/js/select2.full.min.js"></script>
    <script src="~/lib/excel/xlsx.full.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
