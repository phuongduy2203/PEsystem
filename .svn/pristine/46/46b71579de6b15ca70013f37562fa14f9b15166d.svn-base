@{
    ViewData["Title"] = "HassBi";
}
@{
    Layout = "~/Areas/HassBi/Views/Shared/Layout_BiHass.cshtml";
}
<style>
    /* Giới hạn độ rộng cột */
    #hassbi-table th, #hassbi-table td {
        white-space: nowrap; /* Ngăn xuống dòng */
        overflow: hidden;
        text-overflow: ellipsis; /* Hiển thị dấu "..." nếu nội dung quá dài */
        max-width: 80px; /* Giới hạn độ rộng cột */
    }

    /* Cho phép cuộn ngang nếu nội dung quá dài */
    .table-wrapper {
        overflow-x: auto;
        width: 100%;
        padding: 15px; /* Thêm padding trái/phải khi cuộn ngang */
    }

    /* Ghim ô tìm kiếm của DataTable trong #data-results */
    #data-results .dataTables_filter {
        position: fixed;
        top: 70px; /* Đặt dưới #ctr-box */
        right: 25px; /* Canh phải */
        background: #fff; /* Nền trắng */
        border-radius: 8px;
        padding: 5px 5px; /* Khoảng cách bên trong */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Hiệu ứng bóng */
    }

    /* Ghim phần phân trang của DataTable trong #data-results */
    #data-results .dataTables_paginate {
        position: fixed;
        bottom: 10px; /* Đặt ở dưới cùng */
        right: 25px; /* Canh phải, đồng bộ với ô tìm kiếm */
        z-index: 1000; /* Đảm bảo nằm trên cùng */
        background: #fff; /* Nền trắng */
        border-radius: 8px;
        padding: 5px 5px; /* Khoảng cách bên trong */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Hiệu ứng bóng */
    }
</style>
<main id="mainContent">
    <section class="section dashboard">
        <div id="ctr-box" class="" style="display: flex;align-items: center;gap: 10px;">
            <!-- update MO/status Button -->
            <button id="Update-MO-status-btn" class="btn btn-warning">
                <i class="fas fa-sync-alt"></i> Update MO/Status
            </button>
            <!-- tim kiem theo trang thai -->
            <button id="data-search-btn" class="btn btn-success">
                <i class="fas fa-search-location"></i> Tìm kiếm
            </button>

            <select id="search-options" class="form-select" style="width: 250px">
                <option selected>TÌM KIẾM</option>
                <option value="SEARCH_MO">Tìm kiếm MO</option>
                <option value="SEARCH_STATUS">Tìm kiếm theo trạng thái</option>
            </select>
            <!-- thẻ nhập MO -->
            <input type="text" id="MO-input" class="" placeholder="Nhập MO">
            <!-- Chọn status -->
            <select id="status-options" class="" style="width: 120px">
                <option selected>Chọn status</option>
                <option value="On-going">On going</option>
                <option value="Fail">Fail</option>
                <option value="Close">Close</option>
            </select>
            <!-- Export Button -->
            <button id="HassBi-ExportExcel-btn" class="btn btn-secondary">
                <i class="fas fa-file-export"></i> Xuất Excel
            </button>
        </div>
        <div id="result-box">
            <!-- hiển thị kho dữ liệu -->
            <div id="data-results"></div>
        </div>
    </section>
</main>

@section Scripts {
    <script src="~/assets/areas/hassbi/js/hassbi.js?v=@DateTime.Now.Ticks"></script>
}
