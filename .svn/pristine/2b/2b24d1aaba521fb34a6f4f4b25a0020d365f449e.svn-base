@model User

<h2>Edit User</h2>
<form asp-controller="Admin" asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label for="role">Role</label>
        <select id="role" name="role" class="form-control">
            <option value="User">User</option>
            <option value="Admin">Admin</option>
            <option value="SuperAdmin">SuperAdmin</option>
        </select>
    </div>

    <div class="form-group">
        <label for="allowedAreas">Allowed Areas (comma-separated)</label>
        <input id="allowedAreas" name="allowedAreas" class="form-control" value="@string.Join(",", Model.AllowedAreas)" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>