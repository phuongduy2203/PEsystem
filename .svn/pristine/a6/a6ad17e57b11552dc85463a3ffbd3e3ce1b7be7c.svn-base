@{
    ViewData["Title"] = "Repository";
    Layout = "~/Areas/Repositories/Views/Shared/_Layout_Repo.cshtml";
}
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var allowedAreas = HttpContextAccessor.HttpContext.User.Claims
    .FirstOrDefault(c => c.Type == "AllowedAreas")?.Value.Split(',');

    var canShowB36R = allowedAreas != null && allowedAreas.Any(area => area.Trim() == "B36R");
    var canShowRepair = allowedAreas != null && allowedAreas.Any(area => area.Trim() == "EXPORT_REPAIR");
}
<div id="option-list" class="mt-3 col-12">
    <div class="card-body">
        <input type="hidden" id="exportPerson" value="@User.Identity?.Name" />
        <div class="row">
            <table class="table table-bordered mt-1">
                <thead>
                    <tr>
                        <th class="col-md-4 text-muted">SERIAL_NUMBER</th>
                        <th class="col-md-4 text-muted">MODEL_NAME</th>
                        <th class="col-md-4 text-muted">PRODUCT_LINE</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <textarea id="sn-input" class="form-control" rows="8" placeholder="Danh Sách Serial Number"></textarea>
                        </td>
                        <td>
                            <textarea class="model-name-field form-control" rows="8" readonly></textarea>
                        </td>
                        <td>
                            <textarea class="product-line-field form-control" rows="8" readonly></textarea>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
        <div class="btn-action-group btn-group mt-1">
            @if (canShowB36R)
            {
                <button id="export-btn" class="btn btn-outline-dark">XUẤT B36R</button>
            }
            @if (canShowRepair)
            {
                <button id="export-repair-btn" class="btn btn-outline-dark">XUẤT REPAIR</button>
            }
        </div>
    </div>

    <div id="duplicate-warning" class="text-danger mt-2" style="display: none;">Phát hiện serial numbers trùng lặp!</div>
</div>
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

@section Scripts {
    <script src="~/assets/areas/repositories/js/export.js?v=@DateTime.Now.Ticks"></script>
}