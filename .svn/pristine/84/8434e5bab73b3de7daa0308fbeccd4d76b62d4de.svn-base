@{
    ViewData["Title"] = "Repository";
}
@{
    Layout = "~/Areas/Repositories/Views/Shared/_Layout_Repo.cshtml";
}

<div id="option-list" class="mt-3 col-md-12">
    <div class="overflow-auto mt-3">
        <div class="card-body">
            <div>
                <!-- Thẻ ẩn chứa tên người dùng -->
                <input type="hidden" id="exportPerson" value="@User.Identity.Name" />
            </div>
            <div class="row">
                <table class="table table-bordered mt-1" style="width:100%">
                    <thead>
                        <tr>
                            <th class="fixed-column col-md-4 text-muted">SERIAL NUMBER</th>
                            <th class="col-md-3 text-muted">MODEL NAME</th>
                            <th class="col-md-3 text-muted">PRODUCT LINE</th>
                        </tr>
                    </thead>
                    <tbody id="serial-number-table">
                        <tr>
                            <td class="col-md-4">
                                <div>
                                    <textarea name="serialNumber" id="sn-input" class="serial-number-input form-control" rows="8" placeholder="Serial Number List"></textarea>
                                </div>
                            </td>
                            <td class="col-md-3"><textarea name="modelName" class="model-name-field form-control" rows="8" readonly></textarea></td>
                            <td class="col-md-3"><textarea name="productLine" class="product-line-field form-control" rows="8" readonly></textarea></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
    <div class="fixed-column d-flex col-md-3">
        <button id="export-btn" class="btn btn-ne button-fixed-width flex-fill">XUẤT KHO</button>
    </div>
</div>
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


@section Scripts {
    <script src="~/assets/areas/repositories/js/export.js"></script>
}
