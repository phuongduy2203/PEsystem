@{
    ViewData["Title"] = "Repository";
    Layout = "~/Areas/Repositories/Views/Shared/_Layout_Repo.cshtml";
}

<div id="option-list" class="mt-3 col-12">
    <div class="card-body">
        <input type="hidden" id="exportPerson" value="@User.Identity?.Name" />
        <div class="row">
            <table class="table table-bordered mt-1">
                <thead>
                    <tr>
                        <th class="col-md-4 text-muted">SERIAL NUMBER</th>
                        <th class="col-md-4 text-muted">MODEL NAME</th>
                        <th class="col-md-4 text-muted">PRODUCT LINE</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <textarea id="sn-input" class="form-control" rows="8" placeholder="Serial Number List"></textarea>
                        </td>
                        <td>
                            <textarea class="model-name-field form-control" rows="8" readonly></textarea>
                        </td>
                        <td>
                            <textarea class="product-line-field form-control" rows="8" readonly></textarea>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-3">
        <button id="export-btn" class="btn btn-primary w-100">EXPORT</button>
    </div>
    <div id="duplicate-warning" class="text-danger mt-2" style="display: none;">Duplicate serial numbers detected!</div>
</div>
<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

@section Scripts {
    <script src="~/assets/areas/repositories/js/export.js?v=@DateTime.Now.Ticks"></script>
}