@{
    ViewData["Title"] = "Bonepile";
}
@{
    Layout = "~/Areas/Bonepile/Views/Shared/_Layout_Bonepile.cshtml";
}
<!-- Header -->
<header class="my-3">
    <h1>Dashboard Bonepile</h1>
</header>

<!-- KPI Cards -->
<div class="kpi-cards row my-5">
    <div class="col-md-2 col-lg-1 col-sm-3 col-3">
        <div class="card text-white bg-primary smaller-card">
            <div class="card-body smaller-text">
                <h5 class="card-title">Bonepile Total</h5>
                <p class="card-text" id="totalCount">N/A</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-lg-1 col-sm-3 col-3">
        <div class="card text-white bg-danger smaller-card">
            <div class="card-body smaller-text">
                <h5 class="card-title">Scrap Has Task</h5>
                <p class="card-text" id="scrapCount">N/A</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-lg-1 col-sm-3 col-3">
        <div class="card text-white bg-danger smaller-card">
            <div class="card-body smaller-text">
                <h5 class="card-title">Scrap Lacks Task</h5>
                <p class="card-text" id="noTaskscrapCount">N/A</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-lg-1 col-sm-3 col-3">
        <div class="card text-white bg-warning smaller-card">
            <div class="card-body smaller-text">
                <h5 class="card-title">Waiting Approve Scrap</h5>
                <p class="card-text" id="waitingScrapCount">N/A</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-lg-1 col-sm-3 col-3">
        <div class="card text-white bg-secondary smaller-card">
            <div class="card-body smaller-text">
                <h5 class="card-title">Rework FG</h5>
                <p class="card-text" id="reworkFG">N/A</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-lg-1 col-sm-3 col-3">
        <div class="card text-white bg-warning smaller-card">
            <div class="card-body smaller-text">
                <h5 class="card-title">Under Repair in RE</h5>
                <p class="card-text" id="underRepairRE">N/A</p>
            </div>
        </div>
    </div>
    <div class="col-md-2 col-lg-1 col-sm-3 col-3">
        <div class="card text-white bg-light smaller-card">
            <div class="card-body smaller-text">
                <h5 class="card-title">Under Repair in PD</h5>
                <p class="card-text" id="underRepairPD">N/A</p>
            </div>
        </div>
    </div>
</div>

<!-- Donut Chart and Table -->
<div class="row my-4">
    <!-- Biểu đồ phân bố trạng thái -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-body" style="display: flex; flex-direction: column; align-items: center;">
                <h5 class="card-title">Phân bố trạng thái</h5>
                <canvas id="statusDonutChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Bảng sumMaterialsTable -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <table id="sumMaterialsTable" class="display table table-bordered table-striped datatable-table" style="width:100%">
                    <thead>
                        <tr>
                            <th>SERIAL_NUMBER</th>
                            <th>PRODUCT_LINE</th>
                            <th>MODEL_NAME</th>
                            <th>MO_NUMBER</th>
                            <th>WIP_GROUP</th>
                            <th>TEST_GROUP</th>
                            <th>TEST_CODE</th>
                            <th>TEST_TIME</th>
                            <th>ERROR_DESC</th>
                            <th>WORK_FLAG</th>
                            <th>ERROR_FLAG</th>
                            <th>STATUS</th>
                            <th>NOTE</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/areas/bonepile/js/bonepile.js?v=@DateTime.Now.Ticks"></script>
}

    <style>
        .smaller-card {
            transform: scale(0.75); /* Reduce card size by 25% */
            margin: 0 -5px; /* Minimize spacing between cards */
        }

        .smaller-text .card-title {
            font-size: 1.3rem; /* Smaller title font size */
        }

        .smaller-text .card-text {
            font-size: 1.3rem; /* Smaller text font size */
        }

        .kpi-cards {
            display: flex;
            flex-wrap: nowrap; /* Keep cards in a single row */
        }

            .kpi-cards .col-md-2,
            .kpi-cards .col-lg-1,
            .kpi-cards .col-sm-3,
            .kpi-cards .col-3 {
                flex: 0 0 14.2857%; /* Divide equally for 7 cards (100% / 7) */
                max-width: 14.2857%; /* Ensure equal width */
                padding: 0; /* Reduce padding for tighter fit */
            }
    </style>