// Operation Filter để hỗ trợ multipart/form-data và hiển thị mục upload file
public class MultipartFormDataOperationFilter : IOperationFilter
{
    public void Apply(OpenApiOperation operation, OperationFilterContext context)
    {
        var parameters = context.MethodInfo.GetParameters();
        if (parameters.Any(p => p.ParameterType == typeof(IFormFile) || p.ParameterType.CustomAttributes.Any(a => a.AttributeType == typeof(FromFormAttribute))))
        {
            operation.RequestBody = new OpenApiRequestBody
            {
                Content = new Dictionary<string, OpenApiMediaType>
                {
                    ["multipart/form-data"] = new OpenApiMediaType
                    {
                        Schema = new OpenApiSchema
                        {
                            Type = "object",
                            Properties = new Dictionary<string, OpenApiSchema>
                            {
                                ["serialNumber"] = new OpenApiSchema { Type = "string", Description = "Serial number" },
                                ["status"] = new OpenApiSchema { Type = "string", Description = "Status (Pass/Fail)" },
                                ["employeeId"] = new OpenApiSchema { Type = "string", Description = "Employee ID" },
                                ["notes"] = new OpenApiSchema { Type = "string", Description = "Notes (optional)", Nullable = true },
                                ["handOverStatus"] = new OpenApiSchema { Type = "string", Description = "Handover status" },
                                ["image"] = new OpenApiSchema { Type = "string", Format = "binary", Description = "Image file (optional)" }
                            },
                            Required = new HashSet<string> { "serialNumber", "status", "employeeId", "handOverStatus" }
                        }
                    }
                }
            };
        }
    }
}