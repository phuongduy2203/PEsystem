body {
    font-family: 'Roboto', sans-serif;
    background-color: #f8f9fa;
}

#drive-header {
    background-color: #f1f3f4;
    border-bottom: 1px solid #dadce0;
    padding: 10px 20px;
}

#breadcrumb {
    font-size: 14px;
    color: #5f6368;
}

    #breadcrumb a {
        color: #1a73e8;
        text-decoration: none;
        margin-right: 5px;
    }

        #breadcrumb a:hover {
            text-decoration: underline;
        }

#data-cloud-results {
    overflow: auto;
    max-height: 450px;
    background-color: #fff;
    border: 1px solid #dadce0;
    border-radius: 8px;
    padding: 10px;
}

.data-item {
    padding: 10px;
    border-bottom: 1px solid #eee;
    transition: background-color 0.2s;
    display: flex;
    align-items: center;
    font-size: 16px;
    color: #202124;
}

    .data-item:hover {
        background-color: #f5f5f5;
        cursor: pointer;
    }

    .data-item i {
        margin-right: 10px;
    }

    .data-item .fa-folder {
        color: #f4c542; /* Màu vàng cho thư mục */
    }

    .data-item .fa-file {
        color: #4285f4; /* Màu xanh cho tệp */
    }

    .data-item input[type="checkbox"] {
        margin-right: 10px;
    }

#data-cloud-results.dragover {
    background-color: #e8f0fe;
    border: 2px dashed #1a73e8;
}