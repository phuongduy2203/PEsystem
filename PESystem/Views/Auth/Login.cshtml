@model LoginModel
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
    ViewData["Title"] = "Login";
}

<!-- Hiá»‡u á»©ng particles -->
<div id="particles-js"></div>
<!-- Form Ä‘Äƒng nháº­p -->
<div class="login-container">
    <div class="text-center mb-3">
        <img src="~/assets/img/logo.jpg" alt="Logo" style="width: 70px;">
    </div>
    <h2>Welcome to PE System!ðŸ‘‹</h2>
    <p>Please sign-in to your account and start the adventure</p>
    <form method="post" asp-controller="Auth" asp-action="Login">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group mb-3">
            <input asp-for="Username" id="username" placeholder="Username" />
        </div>
        <div class="form-group mb-3">
            <div class="input-group">
                <input asp-for="Password" id="password" placeholder="Password" />
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="form-check">
                <input class="form-check-input" asp-for="RememberMe" id="rememberMe" checked>
                <label class="form-check-label" for="rememberMe">Remember me</label>
            </div>
            <a asp-action="Reset" asp-controller="Auth">Forgot password?</a>
        </div>
        <button type="submit">Log In</button>
    </form>
    <p class="text-muted text-center mt-3">
        <small>New on our platform? <a href="@Url.Action("Register", "Auth")">Create an account</a></small>
    </p>
    <div class="d-flex justify-content-center align-items-center mt-4">
        <hr class="w-25"> <span class="px-2 text-muted">or</span> <hr class="w-25">
    </div>
    <div class="d-flex justify-content-center align-items-center mt-3">
        <a href="#" class="btn btn-light btn-sm mx-1">
            <img src="~/assets/img/honhai.png" style="width:13.35px; height:14.67px;" />
        </a>
        <a href="#" class="btn btn-light btn-sm mx-1"><i class="fab fa-github"></i></a>
        <a href="#" class="btn btn-light btn-sm mx-1"><i class="fab fa-google"></i></a>
    </div>
</div>
