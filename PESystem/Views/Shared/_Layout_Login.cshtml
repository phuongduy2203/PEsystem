<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log in</title>
    <link rel="icon" href="~/assets/img/logo.jpg" type="image/jpg">
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/all-fa-icon/css/all.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            overflow: hidden;
            margin: 0;
        }

        /* Form đăng nhập */
        .login-container {
            position: relative;
            z-index: 2;
            background: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 12px;
            text-align: center;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 0 15px rgba(118, 185, 0, 0.3);
            animation: glowing 2s infinite alternate;
        }

            .login-container h3 {
                color: #76b900;
                font-size: 22px;
                margin-bottom: 10px;
            }

            .login-container p {
                color: #666;
                font-size: 14px;
                margin-bottom: 20px;
            }

        input[type="text"],
        input[type="password"] {
            display: block;
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(118, 185, 0, 0.4);
            color: #333;
            outline: none;
            border-radius: 5px;
            transition: 0.3s;
        }

            input[type="text"]:focus,
            input[type="password"]:focus {
                border-color: #76b900;
                box-shadow: 0 0 10px rgba(118, 185, 0, 0.7);
                background: #fff;
            }

        .input-group button {
            background: rgba(255, 255, 255, 0.8);
            border: none;
            color: #76b900;
        }

        button[type="submit"] {
            background: #76b900;
            color: white;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
            transition: 0.3s;
            font-size: 16px;
        }

            button[type="submit"]:hover {
                background: #5d9400;
                box-shadow: 0 0 15px rgba(118, 185, 0, 0.7);
            }

        .form-check-label {
            color: #666;
        }

        .text-muted a {
            color: #76b900;
            text-decoration: none;
        }

            .text-muted a:hover {
                color: #5d9400;
            }

    </style>
</head>
<body>
    @RenderBody()
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>